@using Project.WebUI.Models
@model Business.DataAccess.Public.Entities.Identity.ApplicationUserEntity
<tr>
    <td>
        @Model.UserName
    </td>
    <td>
        @Model.LastLoginTime
    </td>
    <td>
        @Model.RegistrationDate
    </td>
    <td>
        @(Model.Logins.FirstOrDefault() != null ? Model.Logins.FirstOrDefault().LoginProvider : "")
    </td>
    <td>
        <a class="btn btn-info btn-xs btn-block" href="@Url.Action("UserEdit", new { id = Model.Id,returnUrl=Request.Url.PathAndQuery })">
            <i class="fa fa-paste"></i>Edit
        </a>
    </td>
    <td>
        <button class="btn btn-danger btn-xs btn-block" type="button">
            <i class="fa fa-trash"></i>Ban
        </button>
    </td>
</tr>
