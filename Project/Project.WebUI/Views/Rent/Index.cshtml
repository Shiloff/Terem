@using Business.DataAccess.Public.Entities
@model IndexRentViewResult
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInspinia.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Мои квартиры</h2>
        @Html.MvcSiteMap().SiteMapPath()
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Шапка</h5>
                </div>
                <div class="ibox-content form-inline ">
                    <div class="dataTables_wrapper">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>

                                        <th>
                                            Тип
                                        </th>
                                        <th>
                                            Адрес
                                        </th>
                                        <th>
                                            Редактирование
                                        </th>
                                        <th>
                                            Публикация
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Apartment apartment in Model.Apartments)
                                    {
                                        @Html.Partial("_Apartment", apartment)
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="">
                            @Html.ActionLink("Новая квартира", "EditApartment", null, new { @class = "btn btn-block btn-white " })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
