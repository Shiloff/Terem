@model EditApartmentViewResult
@{
    ViewBag.Title = "EditApartment";
    Layout = "~/Views/Shared/_LayoutInspinia.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Редактирование квартиры</h2>
        @Html.MvcSiteMap().SiteMapPath()
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
           
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class=""><a href="@Url.Action("EditApartment", "Rent", new { id = Model.Apartment.ApartmentId })">Основные</a></li>
                    <li class=""><a href="@Url.Action("EditApartmentPhoto", "Rent", new { id = Model.Apartment.ApartmentId })">Фото</a></li>
                    <li class="active"><a data-toggle="tab" href="#tab-3" aria-expanded="true">Карта</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-3" class="tab-pane active">
                        <div class="panel-body">
                            @Html.Hidden("ApartmentId", Model.Apartment.ApartmentId)
                            @Html.Hidden("Latitude", Model.Apartment.Latitude)
                            @Html.Hidden("Longitude",Model.Apartment.Longitude)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Apartment.Adress, new { @class = "col-md-2 control-label" })
                                <div class="col-md-5">
                                    @Html.TextBox("Adress", Model.Apartment.GetAdress, new { @class = "form-control" })
                                </div>
                                <div class="col-md-5">
                                    <button class="btn btn-info" type="button" onclick="GetCoords()"><i class="fa fa-map-marker"></i>&nbsp;&nbsp;Определить</button>
                                    <button class="btn btn-primary" type="button" id="SaveCoordsButton" onclick="SaveManualCoords()" disabled><i class="fa fa-check"></i>&nbsp;Сохранить</button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="hr-line-dashed"></div>
                            <div id="map" class="col-lg-12" style="height: 450px"></div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts{
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
    <script src="~/Scripts/app/apartmentMapEdit.js"></script>
}








